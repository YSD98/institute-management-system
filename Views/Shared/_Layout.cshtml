<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IMS.styles.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }
        main {
            padding-top: 70px; /* height of navbar */
            padding-bottom: 60px; /* height of footer */
            min-height: calc(100vh - 130px); /* full viewport minus header/footer height */
        }
    </style>
</head>
<body>
    <header class="fixed-top bg-white border-bottom box-shadow">
        <nav class="navbar navbar-expand-sm navbar-light container">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Dashboard" asp-action="Index" style="font-weight: 600;">
                <img src="~/images/dashboard.png" alt="IMS Logo" style="height: 32px; width: 32px;" />
                <span>IMS - Institute Management System</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-start" id="mainNavbar">
                <ul class="navbar-nav ms-4">
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                    </li>
                    <!-- add more nav items here if needed -->
                </ul>
            </div>
        </nav>
    </header>


    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer class="fixed-bottom border-top footer text-muted bg-white">
        <div class="container">
            &copy; 2025 - IMS
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
